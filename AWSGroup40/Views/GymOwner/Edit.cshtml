@model AWSGymWebsite.Models.GymPage
@using AWSGymWebsite.Models;

@{
    ViewData["Title"] = "Edit";
}


<div class="container mx-auto pb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
<h1>Edit</h1>

<h4>GymPage</h4>
<hr />
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="OwnerID" />
            <div class="form-group">
                <label asp-for="GymName" class="control-label"></label>
                <input asp-for="GymName" class="form-control" />
                <span asp-validation-for="GymName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GymLocation" class="control-label"></label>
                <input asp-for="GymLocation" class="form-control" />
                <span asp-validation-for="GymLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosingTime" class="control-label"></label>
                <input asp-for="ClosingTime" class="form-control" />
                <span asp-validation-for="ClosingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpeningTime" class="control-label"></label>
                <input asp-for="OpeningTime" class="form-control" />
                <span asp-validation-for="OpeningTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details"  class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            -->
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload file</label>
                <input type="file" name="imagefile" accept="image/*" />
            </div>
            @if (!string.IsNullOrEmpty(Model.ImgURL))
            {
                var cd = new CloudFront();
                    <label>Current Image</label>
                    <img src="@cd.cloudfront/@Model.S3Key" width="200px" height="200px" />
            }
            <input type="hidden" asp-for="ImgURL"  value="@Model.ImgURL"/>
            <input type="hidden" asp-for="S3Key" value ="@Model.S3Key" />
            <input type="hidden" asp-for="viewer" value ="@Model.viewer" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

