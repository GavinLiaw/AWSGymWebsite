@page
@model GymOwnerRegisterModel
@{
    ViewData["Title"] = "GymOwnerRegister";
}

@inject SignInManager<AWSGymWebsiteUser> SignInManager
@inject UserManager<AWSGymWebsiteUser> UserManager
@{
    if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("GymOwner"))
        {

            //redirect to home page
            <script type="text/javascript">
                window.location.href = "@Url.Action("Index","GymOwner")";
            </script>
        }
        else
        {
            //redirect to home page
            <script type="text/javascript">
                window.location.href = "@Url.Action("Index","Viewer")";
            </script>
        }
    }
}
    <div style="width:100%;background-image:url(/img/hero-bg.jpg);height:880px;background-size: cover;background-repeat:no-repeat">

        <div style="width:50%;" class=" align-content-center">
            <div style="padding:5px;text-align:center;">
                <span class="text-white" style="font-weight:bold;font-size:32px;">
                    Share your Gym, Expand the club
                    </span>
            </div>
            <br />
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <center>
                    <table style="width:80%;" class="table1 text-white">
                        <colgroup>
                            <col style="width:50%;" />
                            <col style="width:50%;" />
                        </colgroup>
                        <tr>
                            <td colspan="2" style="text-align:center;">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-white" style="padding:6px;">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-white" style="padding:6px;">
                                <label asp-for="Input.Userfname"></label>
                                <input asp-for="Input.Userfname" class="form-control" />
                                <span asp-validation-for="Input.Userfname" class="text-danger"></span>
                            </td>
                            <td class="text-white" style="padding:6px;">
                                <label asp-for="Input.Userlname"></label>
                                <input asp-for="Input.Userlname" class="form-control" />
                                <span asp-validation-for="Input.Userlname" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                        <td colspan="2" class="text-white" style="padding:6px;">
                            <label asp-for="Input.BusinessSSM"></label>
                                <input asp-for="Input.BusinessSSM" class="form-control" aria-required="true" />
                                <span asp-validation-for="Input.BusinessSSM" class="text-danger"></span>
                            </td>
                        </tr>
                    <td colspan="2" class="text-white" style="padding:6px;">
                        <label asp-for="Input.BusinessEmail"></label>
                        <input asp-for="Input.BusinessEmail" class="form-control" aria-required="true" />
                        <span asp-validation-for="Input.BusinessEmail" class="text-danger"></span>
                    </td>
                    </tr>
                    <td colspan="2" class="text-white" style="padding:6px;">
                        <label asp-for="Input.BusinessContactNumber"></label>
                        <input asp-for="Input.BusinessContactNumber" class="form-control" aria-required="true" />
                        <span asp-validation-for="Input.BusinessContactNumber" class="text-danger"></span>
                    </td>
                    </tr>
                        <tr>
                            <td colspan="2" class="text-white" style="padding:6px;">
                            
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-white" style="padding:6px;">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-white" style="padding:6px;">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align:center;">
                                <br />
                                <br />
                                <button id="registerSubmit" style="width:100%;" type="submit" class="btn btn-lg btn-primary">Register</button>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="" style="font-weight:bold;">
                                <br />
                                <br />
                                <a style="" class="text-white"
                                   asp-area="Identity" asp-page="/Account/Register">
                                    Register as a User here
                                </a>
                            </td>
                        </tr>
                    </table>
                </center>
            </form>
        </div>

