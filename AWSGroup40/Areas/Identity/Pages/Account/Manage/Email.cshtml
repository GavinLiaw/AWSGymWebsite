@page
@model EmailModel
@{
    ViewData["Title"] = "Change Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<br />
<div class="">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="">
                    <span class="fw-bold" style="">Old Email </span>
                    <span class="h-100 text-success font-weight-bold" style="">&nbsp;&nbsp;&nbsp;✓</span>
                    <br />
                    <div>
                    <input type="email" asp-for="Email" class="form-control" style="" disabled />
                    </div>
                    <p></p>
                </div>
            }
            else
            {
                <div class="">
                    <span class="fw-bold" style="">Old Email</span>
                    <br />
                    <input type="email" asp-for="Email" class="form-control" disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                    <p></p>
                </div>
            }
            <div class="">
                <span class="fw-bold" style="">New Email</span>
                <br />
                <input type="email" asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                <p></p>
            </div>
            <br />
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Change email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
